@using Frontend.Components.Models
@using Frontend.Components.Pages.Courses
@using Newtonsoft.Json
@attribute [StreamRendering] 

@inject HttpClient http

@code {
    private List<CourseModel>? courses { get; set; }

    protected override async Task OnInitializedAsync()
    {
        try
        {
            var response = await http.GetAsync("http://localhost:7250/api/GetAllCourses");
            var content = await response.Content.ReadAsStringAsync();

            if (content != null)
            {
                courses = JsonConvert.DeserializeObject<List<CourseModel>>(content)!;
            }
        }
        catch (Exception ex) { }
    }
}

